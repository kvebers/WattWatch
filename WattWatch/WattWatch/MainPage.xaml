<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WattWatch.MainPage"
             BackgroundColor="#0A0B0B">

        <Grid VerticalOptions="Start" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Orientation="Horizontal" Spacing="0" HorizontalOptions="Center" Margin="0, 40, 0, 0" BackgroundColor="#0A0B0B">
            <ImageButton x:Name="DishWasherButton" Source="dish_washer.xml" Margin="15" WidthRequest="50" HeightRequest="70" BackgroundColor="#0A0B0B" Clicked="OnImageButtonClicked" />
            <ImageButton x:Name="WashingButton" Source="washing.xml" Margin="15" WidthRequest="50" HeightRequest="50" BackgroundColor="#0A0B0B" Clicked="OnImageButtonClicked" />
            <ImageButton x:Name="DryerButton" Source="dryer.xml" Margin="15" WidthRequest="50" HeightRequest="50" BackgroundColor="#0A0B0B" Clicked="OnImageButtonClicked" />
        </StackLayout>

        <StackLayout Grid.Row="1" Margin="0, 20, 0, 0" BackgroundColor="Transparent">
            <Label TextColor="white" Text="Ideal delay start time in" FontSize="30" HorizontalOptions="Center" />
        </StackLayout>

        <StackLayout Grid.Row="2" Orientation="Horizontal" Spacing="0" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Margin="0,-10,0, 0">
            <Label x:Name="Time" TextColor="white" Text="23" FontSize="80" Margin="0,0,0,0"/>
            <Label TextColor="white" Text="h" FontSize="30" VerticalOptions="End" VerticalTextAlignment="End"/>
        </StackLayout>

        <StackLayout Grid.Row="3" Orientation="Horizontal" Spacing="0" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Margin="0,0,0,-30">
            <Label TextColor="white" Text="60% --> 70%" FontSize="60"/>
        </StackLayout>

        <StackLayout Grid.Row="4" Orientation="Horizontal" Spacing="0" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Margin="0,0,0,0">
            <Label TextColor="white" Text="Power generated by Water and Solar" FontSize="20"/>
        </StackLayout>

        <StackLayout Grid.Row="5" Orientation="Horizontal" Spacing="0" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Margin="0,-10,0,-10">
            <Label TextColor="white" Text="Machine run duration:" FontSize="20"/>
        </StackLayout>

        <StackLayout Grid.Row="6" Orientation="Horizontal" Spacing="0" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Margin="0,-10,-10, 0">
            <Picker x:Name="durationH" TitleColor="white" Title="1" ItemsSource="{Binding Options}" FontSize="30" VerticalOptions="End" VerticalTextAlignment="End" BackgroundColor="Transparent" />
            <Label TextColor="white" Text="h" FontSize="30" VerticalOptions="End" VerticalTextAlignment="End" Margin="5,0,5,10"/>
            <Picker x:Name="durationMin" TitleColor="white" Title="15" ItemsSource="{Binding Options}" FontSize="30" VerticalOptions="End" VerticalTextAlignment="End" BackgroundColor="Transparent" />
            <Label TextColor="white" Text="min" FontSize="30" VerticalOptions="End" VerticalTextAlignment="End" Margin="5,0,5,10"/>
        </StackLayout>

        <StackLayout Grid.Row="7" Orientation="Horizontal" Spacing="0" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Margin="0,-10,0, 0">
        </StackLayout>

        <StackLayout Grid.Row="8" Orientation="Horizontal" Spacing="0" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Margin="0,0,0, 0">
        </StackLayout>

        <StackLayout Grid.Row="8" Orientation="Horizontal" Spacing="0" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Margin="0,0,0, 0">
        </StackLayout>

        <!-- rest of your content -->

    </Grid>

</ContentPage>
